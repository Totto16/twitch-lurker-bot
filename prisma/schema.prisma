generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id      BigInt    @id @default(autoincrement()) @db.BigInt
    name    String
    Message Message[]
}

model Message {
    id      BigInt   @id @default(autoincrement()) @db.BigInt
    message String
    channel String
    user    User     @relation(fields: [user_id], references: [id])
    user_id BigInt   @db.BigInt
    time    DateTime
}

enum LogType {
    logon
    reconnect
    disconnect

    join
    part
}

model LogEvent {
    id      BigInt   @id @default(autoincrement()) @db.BigInt
    type    LogType
    message String
    time    DateTime
}
